<div class="container">
  <%- include('partials/header') -%>
  <h1>Compose</h1>
  <form action="/compose" method="post">
    <div class="form-group">
      <label>Title</label>
      <textarea class="form-control" name="textTitle"></textarea>
      <label>Post</label>
      <textarea
        class="form-control"
        rows="5"
        cols="30"
        name="textPost"
      ></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Publish</button>
  </form>
  <%- include('partials/footer') -%>
</div>
